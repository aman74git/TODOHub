<!DOCTYPE html>
<html lang="en">
  <%- include ('./common/head') %>

  <body class="vh-100">
    <%- include ('./common/navbar') %>

    <div class="container body-ele">
      <!-- home page -->

      <!-- add task  -->
      <div class="row mt-5">
        <div class="col-12 col-md-10 col-lg-8 mx-auto">
          <div class="input-group mb-3">
            <input
              type="text"
              class="form-control p-2 p-lg-3"
              placeholder="Add task"
              aria-label="Add-task"
              id="new-task-input"
            />
            <button class="btn btn-primary p-3" id="add-task-btn" type="submit">
              Add
            </button>
          </div>
        </div>
      </div>

      <!-- pending tasks  -->
      <div class="row my-5">
        <div class="col-12 col-md-10 col-lg-8 mx-auto">
          <div class="row col-12">
            <h3>Pending Tasks</h3>
          </div>

          <div class="row mt-4" id="no-pending">
            <div class="col-12 text-center fs-4">
              No pending tasks, click add task above to add a task
            </div>
          </div>

          <ul class="list-group" id="pending-task-ul">
            <!-- this is dummy node  -->
            <li class="list-grp-item mt-4 p-3 task-ele d-none">
              <div class="d-flex">
                <input
                  class="form-check-input me-3 flex-shrink-0 task-check"
                  type="checkbox"
                  value=""
                />
                <div class="task-content flex-grow-1"></div>
              </div>
              <div class="text-end">
                <i
                  title="save"
                  class="bi bi-check2-square text-primary fs-4 me-2 save-btns d-none"
                ></i>
                <i
                  title="edit"
                  class="bi bi-pencil-square text-primary fs-4 me-2 edit-btns"
                ></i>
                <i class="bi bi-trash3-fill text-danger fs-4 delete-btns"></i>
              </div>
            </li>
          </ul>
        </div>
      </div>

      <!-- completed task -->
      <div class="row my-5">
        <div class="col-12 col-md-10 col-lg-8 mx-auto">
          <div class="row col-12">
            <h3>Completed Tasks</h3>
          </div>

          <div class="row mt-4" id="no-complete">
            <div class="col-12 text-center fs-4">
              No task completed, check the pending tasks to complete
            </div>
          </div>

          <ul class="list-group" id="completed-task-ul">
            <!-- this is dummy node  -->
            <li class="list-grp-item mt-4 p-3 task-ele d-none">
              <div class="d-flex">
                <input
                  class="form-check-input me-3 flex-shrink-0 task-check"
                  type="checkbox"
                  id="firstCheckbox"
                  checked
                />
                <div class="task-content flex-grow-1"></div>
              </div>
              <div class="text-end">
                <i class="bi bi-trash3-fill text-danger fs-4 delete-btns"></i>
              </div>
            </li>
          </ul>
        </div>
      </div>

      <!-- intro  -->
      <div class="row my-5 no-task-view"></div>

      <!-- container end  -->
    </div>

    <!-- bootstrap js -->

    <%- include ('./common/footer') %>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4"
      crossorigin="anonymous"
    ></script>
    <script src="script/elements.js"></script>
    <script src="script/homeServerConnect.js"></script>
    <script src="script/homeScript.js"></script>
  </body>
</html>
